<div class= "container my-3 text-center">
<h1>Edit listing</h1>
 
<%= form_with scope: :listing, url: listing_path(@listing), method: :patch, local: true do |form| %>
 
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@listing.errors.count, "error") %> prohibited
        this listing from being saved:
      </h2>
      <ul>
        <% @listing.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %>:<br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :country %>:<br>
    <%= form.text_field :country %>
  </p>

  <p>
    <%= form.label :city %>:<br>
    <%= form.text_field :city %>
  </p>
 
  <p>
    <%= form.label :area %>:<br>
    <%= form.text_field :area %>
  </p>

  <p>
    <%= form.label :street %>:<br>
    <%= form.text_field :street %>
  </p>

  <p>
    <%= form.label :property_type %>:<br>
    <%= form.text_field :property_type %>
  </p>

  <p>
    <%= form.label :number_of_guest %>:<br>
    <%= form.text_field :number_of_guest %>
  </p>

  <p>
    <%= form.label :number_of_rooms %>:<br>
    <%= form.text_field :number_of_rooms %>
  </p>

  <p>
    <%= form.label :number_of_bathrooms %>:<br>
    <%= form.text_field :number_of_bathrooms %>
  </p>

  <p>
    <%= form.label :price %>:<br>
    <%= form.text_field :price %>
  </p>

  <p>
	<%= form.file_field :avatars, multiple: true %>
  </p>
 
  <div class="my-4">
    <%= form.submit :class => "btn btn-primary" %>
    <%= link_to 'Back', listings_path, :class => "btn btn-primary" %>
  </div>   
 
<% end %>
</div>


